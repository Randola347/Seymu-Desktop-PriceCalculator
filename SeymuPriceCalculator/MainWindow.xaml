<Window x:Class="SeymuPriceCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seymu - Calculadora de Madera"
        Height="650"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
    FontSize="18"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <Window.Resources>
    <SolidColorBrush x:Key="VerdePrimario" Color="#2D6A27"/>
        <SolidColorBrush x:Key="VerdeHover" Color="#24541F"/>
        <SolidColorBrush x:Key="BeigeFondo" Color="#F5F0E8"/>
        <SolidColorBrush x:Key="GrisBorde" Color="#D0D0D0"/>

        <!-- 🏷 Estilo etiquetas -->
        <Style x:Key="Etiqueta" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource VerdePrimario}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Margin" Value="0,4,0,10"/>
        </Style>

        <!-- 📦 Estilo TextBox global -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,6,0,14"/>
            <Setter Property="BorderBrush" Value="{StaticResource GrisBorde}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <!-- 📦 Estilo ComboBox global -->
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,4,0,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource GrisBorde}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <!-- 🟢 Botón verde (con hover) -->
        <Style x:Key="BotonVerde" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource VerdePrimario}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="14,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource VerdeHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🔵 Botón Azul -->
        <Style x:Key="BotonAzul" TargetType="Button" BasedOn="{StaticResource BotonVerde}">
            <Setter Property="Background" Value="#2980B9"/>
        </Style>

        <!-- ⚪ Botón Gris -->
        <Style x:Key="BotonGris" TargetType="Button" BasedOn="{StaticResource BotonVerde}">
            <Setter Property="Background" Value="#7F8C8D"/>
        </Style>
    </Window.Resources>

    <!-- ================= LAYOUT ================= -->
    <Grid Margin="5" Background="{StaticResource BeigeFondo}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Border Background="{StaticResource VerdePrimario}"
        CornerRadius="10"
        Padding="10"
        Margin="0,0,0,15">

            <TextBlock Text="SEYMU"
               FontSize="28"
               FontWeight="Bold"
               Foreground="White"
               VerticalAlignment="Center"/>

        </Border>

        <!-- ================= DATOS CLIENTE ================= -->
        <GroupBox Header="Datos del Cliente"
                  Grid.Row="1"
                  Margin="0,0,0,10"
                  Padding="10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Nombre:" VerticalAlignment="Center" Style="{StaticResource Etiqueta}"/>
                <TextBox x:Name="txtNombre"
                         Grid.Column="1"
                         PreviewTextInput="SoloLetras"/>

                <TextBlock Text="Teléfono:"
                           Grid.Column="3"
                           VerticalAlignment="Center"
                           Style="{StaticResource Etiqueta}"/>
                <TextBox x:Name="txtTelefono"
                         Grid.Column="4"
                         PreviewTextInput="SoloNumeros"/>
            </Grid>
        </GroupBox>


        <!-- ================= INGRESO PIEZAS ================= -->
        <GroupBox Header="Ingreso de Piezas"
          Grid.Row="2"
          Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- PANEL IZQUIERDO -->
            <Grid Grid.Column="0"
                  Grid.Row="0"
                  VerticalAlignment="Stretch">
                
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tipo -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Tipo de Madera" Style="{StaticResource Etiqueta}"/>
                        <ComboBox x:Name="cmbMadera" SelectedIndex="0">
                            <ComboBoxItem Content="Cedro"/>
                            <ComboBoxItem Content="Guanacaste"/>
                            <ComboBoxItem Content="Melina"/>
                            <ComboBoxItem Content="Teca"/>
                            <ComboBoxItem Content="Caobilla"/>
                            <ComboBoxItem Content="Cenizaro"/>
                            <ComboBoxItem Content="Laurel"/>
                            <ComboBoxItem Content="Pino"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Largo -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Largo" Style="{StaticResource Etiqueta}"/>
                        <TextBox x:Name="txtLargo" PreviewTextInput="SoloDecimal"/>
                    </StackPanel>

                    <!-- Anchos -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Anchos (Ej: 10-7-5-9)" Style="{StaticResource Etiqueta}"/>
                        <TextBox x:Name="txtAnchos" PreviewTextInput="SoloNumerosYGuion"/>
                    </StackPanel>

                    <!-- Grosor -->
                    <StackPanel Grid.Row="3">
                        <TextBlock Text="Grosor (Pulgadas)" Style="{StaticResource Etiqueta}"/>
                        <ComboBox x:Name="cmbGrosor" SelectedIndex="0">
                            <ComboBoxItem Content="0.5"/>
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="1.5"/>
                            <ComboBoxItem Content="1.75"/>
                            <ComboBoxItem Content="1.125"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Precio -->
                    <StackPanel Grid.Row="4">
                        <TextBlock Text="Precio por Pulgada" Style="{StaticResource Etiqueta}"/>
                        <TextBox x:Name="txtPrecio" PreviewTextInput="SoloDecimal"/>
                    </StackPanel>

                    <!-- Botones -->
                    <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,8,0,0">

                        <Button x:Name="btnAgregar"
                Content="Agregar"
                Width="120"
                Style="{StaticResource BotonVerde}"
                Click="AgregarPieza_Click"/>

                        <Button x:Name="btnGuardar"
                Content="Guardar"
                Width="120"
                Margin="10,0,0,0"
                Style="{StaticResource BotonAzul}"
                Click="GuardarEdicion_Click"
                Visibility="Collapsed"/>

                        <Button x:Name="btnCancelar"
                Content="Cancelar"
                Width="120"
                Margin="10,0,0,0"
                Style="{StaticResource BotonGris}"
                Click="CancelarEdicion_Click"
                Visibility="Collapsed"/>

                    </StackPanel>

                </Grid>
                <!-- ================= TABLA ================= -->
             <DataGrid x:Name="dgPiezas"
             Grid.Column="2"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          FontSize="18"
          RowHeight="40"
          ColumnHeaderHeight="42"
          HeadersVisibility="Column"
          AlternatingRowBackground="#F2F2F2"
          HorizontalAlignment="Stretch">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="#"
                    Binding="{Binding Numero}"
                    Width="30"/>

                        <DataGridTextColumn Header="Madera"
                    Binding="{Binding TipoMadera}"
                    Width="105"/>

                        <DataGridTextColumn Header="Anchos"
                    Binding="{Binding Anchos}"
                    Width="*"/>

                        <DataGridTextColumn Header="Largo"
                    Binding="{Binding Largo}"
                    Width="60"/>

                        <DataGridTextColumn Header="Total Ancho"
                    Binding="{Binding TotalAncho}"
                    Width="110"/>

                        <DataGridTextColumn Header="Grosor"
                    Binding="{Binding Grosor}"
                    Width="65"/>

                        <DataGridTextColumn Header="Pulgadas"
                    Binding="{Binding TotalBase}"
                    Width="110"/>

                        <DataGridTextColumn Header="Precio"
                    Binding="{Binding Precio, StringFormat='₡ {0:N2}'}"
                    Width="110">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#2980B9"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>

                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Total"
                    Binding="{Binding Precio, StringFormat='₡ {0:N2}'}"
                    Width="110">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Blue"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>

                        </DataGridTextColumn>

                        <!-- ACCIONES -->
                        <DataGridTemplateColumn Header="Acciones" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">

                                        <Button Content="Editar"
                                                Tag="{Binding}"
                                                Click="EditarPieza_Click"
                                                Background="#F39C12"
                                                Foreground="White"
                                                Padding="5,2"
                                                Margin="0,0,5,0"/>

                                        <Button Content="Eliminar"
                                                Tag="{Binding}"
                                                Click="EliminarPieza_Click"
                                                Background="#C0392B"
                                                Foreground="White"
                                                Padding="5,2"/>

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                </DataGrid>

            </Grid>
        </GroupBox>

        <!-- ================= TOTALES ================= -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">

            <TextBlock Text="Subtotal: " FontWeight="Bold" Margin="10,0"/>
            <TextBlock x:Name="lblSubtotal" Margin="10,0"/>

            <TextBlock Text="IVA (13%): " FontWeight="Bold" Margin="30,0"/>
            <TextBlock x:Name="lblIVA" Margin="10,0"/>

            <TextBlock Text="Total: " FontWeight="Bold" Margin="30,0"/>
            <TextBlock x:Name="lblTotal"
                       FontSize="24"
                       Foreground="Blue"
                       FontWeight="Bold"
                       Margin="10,0"/>
        </StackPanel>

    </Grid>

</Window>